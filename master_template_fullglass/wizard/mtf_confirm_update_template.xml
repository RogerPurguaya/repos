<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- mtf.confirm.update.template form view -->
        <record id="mtf_confirm_update_template_view_form" model="ir.ui.view">
            <field name="name">mtf.confirm.update.template.view.form</field>
            <field name="model">mtf.confirm.update.template</field>
            <field name="arch" type="xml">
                <form string="Confirmación de actualización de Ficha Maestra">
                    <group string="Confirmar actualización de Ficha Maestra">
                        <group>
                            <field name="current_sale_price" readonly="1"/> 
                        </group>
                        <group>
                            <field name="new_sale_price" readonly="1"/> 
                        </group>
                    </group>
                    <footer>
                        <button string="Confirmar" name="confirm" type="object" class="btn-primary"/>
                        <button string="Cancelar" name="cancel" special="cancel" class="oe_link oe_inline"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>