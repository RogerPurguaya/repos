<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- mtf.finish.insulados.wizard form view -->
        <record id="mtf_finish_insulados_wizard_view_form" model="ir.ui.view">
            <field name="name">mtf.finish.insulados.wizard.view.form</field>
            <field name="model">mtf.finish.insulados.wizard</field>
            <field name="arch" type="xml">
                <form string="Ingreso de Cristales Insulados">
                    <header>
                        <button string="Ver Cristales Aptos" name="get_ins_crystals" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="glass_order_ids" widget="many2many_tags" required="1"/>
                        </group>
                        <group>
                            <field name="line_ids">
                                <tree>
                                
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Cancelar" name="cancel" special="cancel" class="oe_link oe_inline"/>
                    </footer>
                </form>
            </field>
        </record>

        
        <!-- mtf.finish.insulados.wizard action window -->
        <record id="mtf_finish_insulados_wizard_action" model="ir.actions.act_window">
            <field name="name">mtf.finish.insulados.wizard.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mtf.finish.insulados.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>


        
    </data>
</odoo>