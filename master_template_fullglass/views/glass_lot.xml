<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- glass.lot inherit form view -->
        <record id="view_glass_lot_form" model="ir.ui.view">
            <field name="name">glass.lot.inherit.view.form</field>
            <field name="model">glass.lot</field>
            <field name="inherit_id" ref="glass_production_order.view_glass_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='insulado']" position="after">
                    <field name="from_insulado" invisible="1"/>
                </xpath>
                 <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                    <attribute name="decoration-info">from_insulado==True</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>