<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="actualizar_toponimos_wizard_form" model="ir.ui.view">
            <field name="name">actualizar.toponimos.wizard.form</field>
            <field name="model">actualizar.toponimos.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="HAGA CLICK EN ACTUALIZA TOPONIMOS PARA CONTINUAR CON LA OPERACION" version="7.0">
                    <field name="select"/>

                    <footer>
                        <button name="actualizar_toponimos" string="Actualizar Toponimos" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                 </form>
             </field>
        </record>

        <record id="actualizar_toponimos_wizard_action" model="ir.actions.act_window">
            <field name="name">Actualizar Toponimos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">actualizar.toponimos.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="actualizar_toponimos_wizard_form"/>
            <field name="target">new</field>
            <field name="context">'form_view_ref': 'actualizar_toponimos_wizard_form'</field>
        </record>


        <menuitem name="Actualizar Toponimos" id="actualizar_toponimos_wizard_menu"
                 parent="sales_team.menu_sale_report" action="actualizar_toponimos_wizard_action"
                 sequence="40" />

    </data>
</odoo>