<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_glass_order_form_inherit" model="ir.ui.view">
        <field name="name">glass.order.form.view</field>
        <field name="model">glass.order</field>
        <field name="inherit_id" ref="glass_production_order.view_glass_order_form"/>

        <field name="arch" type="xml">
                <button name = 'remove_order' position="before">
                <button string="Imprimir Reporte" name="ordenprod_buttom" type="object" states="confirmed,process,ended,delivered" class="oe_highlight"/>
                </button>    
        </field>
        </record>

        <record id="view_order_form_markup_model" model="ir.ui.view">
              <field name="name">sale.order.form.markup</field>
              <field name="model">sale.order</field>
              <field name="inherit_id" ref="sale.view_order_form"/>
              <field name="arch" type="xml">
                    <xpath expr="//button[@name='save_pdf']" position="after">
                        <button string="Imprimir Reporte" name="ordenprod_buttom" type="object" icon="fa-download"/>
                    </xpath>
              </field>
            </record>

    </data>
</odoo>
