<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_move_picking_tree" model="ir.ui.view">
        <field name="name">view.move.picking.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_tree"/>
        <field name="arch" type="xml">
        	<field name="state" position="after">
        		<field name="retazo_origen"/>
                <field name="show_detail_button" invisible="1" />
                <field name="show_break_button" invisible="1" />
                <field name="show_deliver_button" invisible="1" />
                <button name="get_results" string="Ver cristales" type="object" icon='fa-search-plus' attrs="{'invisible':[('show_deliver_button','=',False)]}"/>
                <button name="get_detail_lines_entered_to_stock" string="Ver Origen" type="object" icon='fa-crosshairs' attrs="{'invisible':[('show_detail_button','=',False)]}"/>
                <button string="Romper Cristales" name="get_crystals_list_for_return" type="object" icon="fa-asterisk" attrs="{'invisible':[('show_break_button','=',False)]}"/>
        	</field>
        </field>
    </record>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="kardex_it.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="punto_llegada" position="after">
                    <field name="driver_delivery"/>
                </field>
            </field>
        </record>

    <record id="stock_move_tree1" model="ir.ui.view">
        <field name="name">Stock Moves</field>
        <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.stock_move_tree"/>
      <field name="groups_id" eval="[(6, 0, [ref('glass_production_order.group_glass_user')])]" />
      <field name="arch" type="xml">
            <xpath expr='//field[@name="product_uom"]' position="attributes">
                <attribute name="domain">['|',('is_retazo','=',True),('plancha','=',True)]</attribute>
            </xpath>
      </field>
    </record>

</odoo>