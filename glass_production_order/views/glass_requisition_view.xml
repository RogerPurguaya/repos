<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_glass_requisition_form" model="ir.ui.view">
		<field name="name">glass.requisition.form.view</field>
		<field name="model">glass.requisition</field>
		<field name="arch" type="xml">
			<form string="Orden de requisición">
				<header>
					<button name="confirm" string="Confirmar" states='draft' type="object" class="btn-primary"/>
					<button name="process" string="Finalizar" states='confirm' type="object" class="btn-primary" confirm="Al finalizar esta Requisición ya no podrá editarse ni eliminarse ¿Esta seguro de continuar?"/>
					<button name="cancel" string="Cancelar Requisicion" states='confirm' type="object" class='btn-danger' confirm="¿Está seguro de cancelar esta Requisición? Recuerde: Esta operación es irreversible"/>
					<field name="state" widget="statusbar" nolabel="1" />
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button type="object"
							name="action_view_delivery_glass"
							class="oe_stat_button"
							icon="fa-truck"
							attrs="{'invisible':[('picking_count','=',0)]}">
							<field name="picking_count" widget="statinfo" string="Entregas" help="Entregas generadas"/>
						</button>
					</div>
					<group>
						<group>
							<field name="name" readonly="1"/>
							<field name="table_number" required="1" attrs="{'readonly':[('state','in',('process','cancel'))]}"/>
							<field name="date_order" required="1" attrs="{'readonly':[('state','in',('process','cancel'))]}"/>
							<field name="product_id" readonly="1"/>
						</group>
						<group>
							<field name="required_area" readonly="1" string="M2 Lote"/>
							<field name="required_mp" readonly="1" string="Materia Prima(M2)"/>
							<field name="returned_area" readonly="1" string="Area Devuelta(M2)"/>
							<field name="used_area" readonly="1" string="Consumido(M2)"/>
							<field name="merma" readonly="1" string="Desperdicio(M2)"/>
						</group>
					</group>
					<notebook>
						<page string="Lotes de Producción">
							<field name="lot_ids" attrs="{'readonly':[('state','not in',['draft'])]}">
								<tree name="Lotes" editable="bottom">
									<field name="lot_id" domain="[('state','=','done'),('requisition_id','=',False)]" string="Lote/Producto" required="1"/>
									<field name="date" readonly="1" string="Fecha"/>
									<field name="user_id" readonly="1" string="Usuario"/>
									<field name="m2" readonly="1" sum="" string="Area(M2)"/>
									<field name="crystal_count" readonly="1" sum="" string="Nro Cristales"/>
								</tree>
							</field>

							<field name="production_order_ids" readonly="1"/>
						</page>

						<!-- Materias Primas -->
						<page string="Materia Prima" attrs="{'invisible':[('state','=','draft')]}">
							<group>
							<span>
							<button class="btn btn-primary" name="add_material" string="Agregar Materiales" type="object" attrs="{'invisible':[('state','!=','confirm')]}"/>
							<button class="btn btn-warning" name="process_material" string="Procesar Materiales" type="object" attrs="{'invisible':[('state','!=','confirm')]}" style="margin-left:20px;"/>
							</span>
							</group>
							<field name="raw_materials" attrs="{'readonly':[('state','=','process')]}">
								<tree create="false" editable="bottom" decoration-success="process == True">
									<field name="product_id" string="Producto" readonly="1"/>
									<field name="quantity" string="Cantidad (Planchas)" required="1" attrs="{'readonly':[('process','=',True)]}"/>
									<field name="process" readonly="1"/>
								</tree>
							</field>
						</page>

						<!-- Retazos -->
						<page string="Retazos MP" attrs="{'invisible':[('state','=','draft')]}">
							<group>
							<span>
							<button class="btn btn-primary" name="add_scraps" string="Agregar Retazos" type="object" attrs="{'invisible':[('state','!=','confirm')]}"/>
							<button class="btn btn-warning" name="process_scraps" string="Procesar Retazos" type="object" attrs="{'invisible':[('state','!=','confirm')]}" style="margin-left:20px;"/>
							</span>
							</group>
							<field name="scraps" attrs="{'readonly':[('state','=','process')]}">
								<tree create="false" editable="bottom" decoration-success="process == True">
									<field name="product_id" string="Producto" readonly="1"/>
									<field name="width" string="Ancho" required="1" attrs="{'readonly':[('process','=',True)]}"/>
									<field name="height" string="Alto" required="1" attrs="{'readonly':[('process','=',True)]}"/>
									<field name="quantity" string="Cantidad Solicitada" required="1" attrs="{'readonly':[('process','=',True)]}"/>
									<field name="process" readonly="1"/>
								</tree>
							</field>
						</page>

						<!-- Devolución de Retazos -->
						<page string="Devolución de Retazos" attrs="{'invisible':[('state','=','draft')]}">
							<group>
							<span>
							<button class="btn-primary" name="add_return_scraps" string="Agregar Retazos a Devolver" type="object" attrs="{'invisible':[('state','!=','confirm')]}"/>
							<button class="btn-warning" name="process_return_scraps" string="Procesar Retazos a Devolver" type="object" attrs="{'invisible':[('state','!=','confirm')]}" style="margin-left:20px;"/>
							</span>
							</group>
							<field name="return_scraps" attrs="{'readonly':[('state','=','process')]}">
								<tree create="false" editable="bottom" decoration-success="process == True">
									<field name="product_id" string="Producto" readonly="1"/>
									<field name="width" string="Ancho" required="1" attrs="{'readonly':[('process','=',True)]}"/>
									<field name="height" string="Alto" required="1" attrs="{'readonly':[('process','=',True)]}"/>
									<field name="quantity" string="Cantidad a Devolver" required="1" attrs="{'readonly':[('process','=',True)]}"/>
									<field name="process" readonly="1"/>
								</tree>
							</field>

							<group class="oe_subtotal_footer oe_left" name="tprt">
								<field name="total_picking_rt"/>
							</group>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_glass_requisition_tree" model="ir.ui.view">
		<field name="name">glass.requisition.tree.view</field>
		<field name="model">glass.requisition</field>
		<field name="arch" type="xml">
			<tree string="Orden de Requisición" decoration-danger="state=='cancel'" decoration-info="state=='draft'">
				<field name="name"/>
				<field name="table_number"/>
				<field name="date_order"/>
				<field name="required_area"/>
				<field name="required_mp"/>
				<field name="state"/>
			</tree>
		</field>
	</record>


	<record id="glass_requisition_search_view" model="ir.ui.view">
		<field name="name">Orden de Requisición - Búsqueda</field>
		<field name="model">glass.requisition</field>
		<field name="arch" type="xml">
			<search string="Buscar Órdenes de Producción">
				<field name="name"/>
				<field name="table_number"/>
				<field name="date_order"/>
				<group>
				<filter name="by_state"
						string="Estado" 
						context="{'group_by':'state'}"/>
				<filter name="by_date"
						string="Fecha Almacén" 
						context="{'group_by':'date_order'}"/>
                </group>
			</search>
		</field>
	</record>

	<record id="end_selected_requisition_action_view" model="ir.actions.server">
		<field name="name">Finalizar</field>
		<field name="model_id" ref='glass_production_order.model_glass_requisition'/>
		<field name="state">code</field>
		<field name="code">action=env['glass.requisition'].browse(context['active_ids']).end_selected()</field>
	</record>

	<record model="ir.values" id="end_selected_requisition_act">
		<field name="name">Finalizar</field>
		<field name="key">action</field>
		<field name="key2">client_action_multi</field>
		<field name="value" eval="'ir.actions.server,%d'%end_selected_requisition_action_view" />
		<field name="model">glass.requisition</field>
	</record>

	<record id="glass_requisition_action" model="ir.actions.act_window">
		<field name="name">Ordenes de Requisición</field>
		<field name="res_model">glass.requisition</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
 
	<menuitem id="glass_inventory_menu" parent="glass_production_menu" name="Inventario" sequence="0" groups="glass_production_order.group_glass_user"/>
	<menuitem id="glass_requisition_menu" parent="glass_inventory_menu" action="glass_requisition_action" sequence="0" groups="glass_production_order.group_glass_user"/>

</odoo>