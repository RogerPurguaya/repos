<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- glass.furnace.out form view -->
    <record id="view_glass_furnace_out_form" model="ir.ui.view">
        <field name="name">glass.furnace.out.form.view</field>
        <field name="model">glass.furnace.out</field>
        <field name="arch" type="xml">
            <form string="Lotes de producción" create="false">
                <header>
                    <button string="Ingresar a Horno" name="send_to_process" type="object" states="confirm" class="oe_highlight" groups="glass_production_order.group_furnace_in"/>
                    <button string="Salida de Horno" name="furnace_out" type="object" states="process" groups="glass_production_order.group_furnace_out" class="oe_highlight"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                <h1>Lote de Horno <field name="name" nolabel="1" readonly="1" default="Nuevo"/> </h1>
                    <group>
                        <group>
                            <field name="nro_crystal" readonly='1' />
                            <field name="total_m2" readonly='1'/>
                            <field name="e_percent" readonly='1'/>
                        </group>
                        <group>
                            <field name="user_ingreso" readonly='1'/>
                            <field name="date_ingreso" readonly='1'/>
                            <field name="date_out" readonly='1'/>
                            <field name="user_out" readonly='1'/>
                        </group>
                    </group>
                    <group>
                    <field name="show_button" invisible="1"/>
                     <button string="Limpiar" name="remove_bad_lines" type="object" class="btn-primary" attrs="{'invisible':['|',('show_button','!=',True),('state','=','done')]}"/>
                    </group>
                    <notebook>
                        <page name="lot_lines" string="Detalle">
                            <field name="line_ids">
                                <tree string="pool" editable="bottom" create="false" edit="false" delete="false" decoration-danger="is_break == True" decoration-success="etiqueta == True">
                                    <button string="Remover Etiquetado" name="reset_label" type="object" icon="fa-tag" attrs="{'invisible':[('etiqueta','!=',True)]}" confirm="¿Está seguro de remover la etiqueta?"/>
                                    <field name="order_number" readonly="1"/>
                                    <field name="crystal_number"/>
                                    <field name="lot_id" invisible="1"/>
                                    <field name="is_used" invisible="1"/>
                                    <field name="base1" readonly="1"/>
                                    <field name="base2" readonly="1"/>
                                    <field name="altura1" readonly="1"/>
                                    <field name="altura2" readonly="1"/>
                                    <field name="area" readonly="1"/>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="obra" readonly="1"/>
                                    <field name="etiqueta" readonly="1"/>
                                    <field name="is_break" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>

        </field>
    </record>


    <record id="view_glass_furnace_out_tree" model="ir.ui.view">
        <field name="name">glass.furnace.out.view</field>
        <field name="model">glass.furnace.out</field>
        <field name="arch" type="xml">
            <tree string="Salida de Horno" create="false">
                <field name="name"/>
                <field name="user_ingreso"/>
                <field name="date_ingreso"/>
                <field name="date_out"/>
                <field name="nro_crystal"/>
                <field name="total_m2"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="glass_furnace_out_view" model="ir.ui.view">
        <field name="name">Salida de Horno - Búsqueda</field>
        <field name="model">glass.furnace.out</field>
        <field name="arch" type="xml">
            <search string="Buscar Salida de Horno">
                <field name="name"/>
                <field name="date_out"/>
                <field name="state"/>
                <filter name="furnace_process" 
                    string="En Proceso"
                    domain="[('state','=','process')]" />
                <group expand="0" string="Group By">
                    <filter string="Fecha" domain="[]" context="{'group_by':'date_out'}"/>
                    <filter string="Estado" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="glass_furnace_out_action" model="ir.actions.act_window">
        <field name="name">Salidas de Horno</field>
        <field name="res_model">glass.furnace.out</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'search_default_furnace_process': 1}" />
    </record>


<!-- glass furnace In Section  -->


    <!-- glass.furnace.in form view -->
    <record id="view_glass_furnace_in_form" model="ir.ui.view">
        <field name="name">glass.furnace.in.form.view</field>
        <field name="model">glass.furnace.in</field>
        <field name="arch" type="xml">
            <form string="Lotes de producción">
                <sheet>
                    <group>
                        <group>
                            <div id="search_code" col="2" style='margin: 1px 10px 0px 10px'>
                                <b>Código de Búsqueda</b><br/>
                                <field id="search_code_field" name="search_code" required="0"/>
                            </div>
                            <div col="2" style='margin: 0px 10px 0px 10px'>
                                <b>Nro de Cristales</b><br/>
                                <field name="crystal_num" readonly="1"/>
                            </div>
                        </group>
                        <group>
                            <field name="message_erro" style="color:Red;" string=" " readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="line_in_ids" string="Detalle">
                            <field name="line_in_ids" create="false">
                                <tree string="pool" editable="bottom" create="false" edit="false">
                                    <field name="order_number" readonly="1"/>
                                    <field name="crystal_number" readonly="1"/>
                                    <field name="base1" readonly="1"/>
                                    <field name="base2" readonly="1"/>
                                    <field name="altura1" readonly="1"/>
                                    <field name="altura2" readonly="1"/>
                                    <field name="area" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Guardar y Nuevo" name="generate_furnace_lot" type="object" class="btn-primary"/>
                        <button string="Cancelar" name="cancel" special="cancel" class="oe_link oe_inline"/>
                    </footer>
                </sheet>
                <script>
                    $(document).ready(function(){
                        let fields = document.getElementById('search_code').getElementsByTagName('input');
                        fields[0].focus();
                        $('#search_code').change(function(e){
                            let fields = document.getElementById('search_code').getElementsByTagName('input');
                            fields[0].focus();
                        });
                    });
                </script>
            </form>
        </field>
    </record>

    <!-- glass_furnace_out action server -->
    <record id="glass_furnace_out_server_action" model="ir.actions.server">
        <field name="name">Ingreso a Horno</field>
        <field name="model_id" ref="model_glass_furnace_in" />
        <field name="code">
                action=model.get_element()
        </field>
    </record>

    
    <!-- manu para salida de horno -->
    <menuitem id="glass_furnace_out_menu" parent="glass_production_order.glass_order_control_menu" action="glass_furnace_out_action" sequence="4" groups="glass_production_order.group_furnace_out"/>
    <!-- Menu para ingreso de horno -->
    <menuitem id="glass_furnace_in_menu" parent="glass_production_order.glass_order_control_menu" action="glass_furnace_out_server_action" sequence="3" groups="glass_production_order.group_furnace_in"/>

</odoo>