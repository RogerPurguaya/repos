<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="glass_remove_order_form_view">
            <field name="name">glass.remove.order.form.view</field>
            <field name="model">glass.remove.order</field>
            <field name="arch" type="xml">
                <form string="Retirar orden">
                    <group>
                        <field name="order_name" readonly="1"/>
                        <field name="date_remove"/>
                        <field name="motive_remove"/>
                    </group>
                    <footer>
                        <button string="Retirar Orden" type="object" name="remove_order" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>