<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    <!-- cashbox.exchange.type tree view -->
    <record id="cashbox_exchange_type_view_tree" model="ir.ui.view">
        <field name="name">cashbox.exchange.type.view.tree</field>
        <field name="model">cashbox.exchange.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="date" required="1"/>
                <field name="currency_id" required="1"/>
                <field name="type_purchase" required="1"/>
                <field name="type_sale" required="1"/>
            </tree>
        </field>
    </record>

    <!-- cashbox.exchange.type action window -->
    <record id="cashbox_exchange_type_action" model="ir.actions.act_window">
        <field name="name">Tipo de cambio Comercial</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cashbox.exchange.type</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Cree su primer tipo de cambio para usarlo en el Punto de Venta.
            </p><p>
                Recuerde que la fecha para cada tipo de cambio debe ser Ãºnica
            </p>
        </field>
    </record>

    <menuitem
        id="cashbox_exchange_type_action_menu"
        parent="menu_cashbox_config_product"
        action="cashbox_exchange_type_action"
        name="Tipo de cambio Comercial"
        groups="group_cashbox_manager"/>
    </data>
</odoo>