<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- cashbox.cash.control.wizard form view -->
    <record id="cashbox_cash_control_wizard_view_form" model="ir.ui.view">
        <field name="name">cashbox.cash.control.wizard.view.form</field>
        <field name="model">cashbox.cash.control.wizard</field>
        <field name="arch" type="xml">
            <form string="Control de saldo inicial">
                <group col="2">
                    <field name="journal_id" required="1"/> 
                    <field name="currency_id"/> 
                </group>
                <separator string="Balance Inicial"/>
                <field name="line_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="coin_value"/> 
                        <field name="number" required="1"/> 
                        <field name="subtotal"/> 
                    </tree>
                </field>
                <footer>
                    <button string="Procesar" name="process" type="object" class="btn-primary"/>
                    <button string="Cancelar" name="cancel" special="cancel" class="oe_link oe_inline"/>
                </footer>
            </form>
        </field>
    </record>

