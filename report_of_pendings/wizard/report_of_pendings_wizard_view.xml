<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="report_pending_wizard_form"> 
			<field name="name">report.pending.wizard.form</field>
			<field name="model">report.pending.wizard</field>
			<field name="arch" type="xml">
				<form string="Reporte de Pendientes" version="8.0">
						<group>
						<span> Ordenes generadas entre:
								<field name="start_date"  required="0"/>
								al
								<field name="end_date"  required="0"/>
						</span>					
						</group>
						<group>
								<field name="search_param" required="1"/>
								<field name="glass_order_id" attrs="{'invisible': [('search_param','!=','glass_order')],'required':[('search_param','=','glass_order')]}"/>
								<field name="product_id" attrs="{'invisible': [('search_param','!=','product')],'required':[('search_param','=','product')]}"/>
								<field name="filters" required="1"/>
								<field name="customer_id" domain="[('customer','=',True)]" attrs="{'invisible':[('search_param','=','glass_order')]}"/>
								<field name="show_breaks"/>
						</group>
						<footer>
							<button string="Exportar" name="do_rebuild" type="object" class="oe_highlight"/>
							or
							<button string="Cancel" class="oe_link" special="cancel"/>
						</footer>
				</form>
			</field>
		</record>


		<record id="report_or_pendings_wizard_action" model="ir.actions.act_window">
			<field name="name">Reporte de seguimiento global de la produccion</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">report.pending.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

	
		<menuitem name="Reporte de Seguimiento de Producccion" id="report_of_pendings_wizard_menu" 
				parent="glass_production_order.glass_order_control_menu"
		 		action="report_or_pendings_wizard_action" 
		 		sequence="3" />


	</data>
</openerp>
