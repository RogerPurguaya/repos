<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="glass_calculator_form_view" model="ir.ui.view">
            <field name="name">glass.sale.calculator.form.view</field>
            <field name="model">glass.sale.calculator</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Calculadora" >
                        <!-- <div class="oe_inline" style="width=100%">
                            <field name="line_ids" nolabel="1" attrs="{'readonly':[('is_locked','=',True)]}" invisible="0"/>
                        </div> -->
                        <field name="line_ids" nolabel="1" context="{'form_view_ref':'sale_calculadora_it.calculator_line_view_form'}">
                            <tree editable="bottom">
                                <button type="object" name="show_crystal_image" class="oe_edit_only oe_link" string="Imagen"/>
                                <field name="quantity" string="Cdt" required='1'/>
                                <field name="crystal_num" string="Nro." required='1'/>
                                <field name="base1" required='1'/>
                                <field name="base2" required='1'/>
                                <field name="height1" required='1'/>
                                <field name="height2" required='1'/>
                                <field name="descuadre" string="Descd."/>
                                <field name="page_number" required="1"/>
                                <!-- <field name="polished_id" string="    Pulido    "/>
                                <field name="entalle" string="Ent."/>
                                <field name="lavado" string="Desc."/> -->
                               <!-- <field name="arenado" string="Aren."/> -->
                                <field name="template" string="Ptlla"/>
                                <field name="packed" string="Embld."/>
                                <field name="perimeter" readonly="1"/>
                                <field name="area" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <group>
                            <field name="order_id" invisible="1"/>
                            <field name="qty_invoiced" readonly="1"/>
                            <field name="qty_invoiced_rest" readonly="1"/>
                            <field name="product_id" readonly="1" string="Producto"/>
                            <field name="sale_uom_id" string="Unidad de venta" readonly="1"/>
                            <field name="type_calculator" invisible="1"/>
                        </group>
                        <group class="oe_subtotal_footer oe_left" name="sale_total">
                            <field name="total_perimeter"/>
                            <field name="total_area"/>
                            <field name="total_sold_area"/>
                            <field name="total_pieces" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="save_calculator" type="object" string="Guardar y aplicar" class="btn-primary"/>
                    </footer>
                </form>
            </field>
    </record>


    <!-- Form calculadora de tipo servicios -->
    <record id="glass_calculator_services_form" model="ir.ui.view">
        <field name="name">glass.sale.calculator.services.form</field>
        <field name="model">glass.sale.calculator</field>
        <field name="arch" type="xml">
            <form >
            <group string="Calculadora" >
                    <!-- <div class="oe_inline" style="width=100%"> -->
                <field name="line_ids" nolabel="1" context="{'default_descuadre':'1,2,3,4','form_view_ref':'sale_calculadora_it.calculator_line_view_form'}">
                    <tree editable="bottom">
                        <!-- <button type="object" name="showimage" class="oe_edit_only oe_link" string="Imagen"/> -->
                        <field name="quantity" string="Cdt"/>
                        <field name="crystal_num" string=" Nro.    "/>
                        <field name="base1"/>
                        <field name="base2"/>
                        <field name="height1"/>
                        <field name="height2"/>
                        <field name="descuadre" string="Nro. Lados"/>
                        <field name="page_number"/>
                        <!-- <field name="entalle" string="Ent."/> -->
                        <field name="template" string="Ptlla"/>
                        <field name="perimeter"/>
                        <field name="area"/>
                    </tree>
                </field>
                    <!-- </div>                                     -->
                </group>
                <group class="oe_subtotal_footer oe_left" name="sale_total">
                    <field name="sale_uom_id" invisible="1"/>
                    <field name="order_id" invisible="1"/>
                    <field name="total_perimeter"/>
                    <field name="total_area"/>
                    <field name="total_sold_area"/>
                    <field name="total_pieces" readonly="1"/>
                </group>
                <footer>
                 <button name="save_calculator" type="object" string="Guardar y aplicar" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>


    <!-- image view -->
    <record id="calculator_line_image_only_form" model="ir.ui.view">
        <field name="name">glass.sale.calculator.line.view.form</field>
        <field name="model">glass.sale.calculator.line</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" string="Imagen de cristal">
                <sheet> 
                    <div style="border-style:solid;width:500px;height:450px;float:left;">
                        <field name="image" widget="image" height="450" width="500" readonly="1"/>
                    </div>
                </sheet>
                <footer>
                    <button name="back_view" string="Regresar" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>


    <!-- standard view -->
    <record id="calculator_line_view_form" model="ir.ui.view">
        <field name="name">glass.sale.calculator.line.view.form</field>
        <field name="model">glass.sale.calculator.line</field>
        <field name="arch" type="xml">
            <form string="Línea de Calculadora">
                <sheet string="Línea de calculadora">
                    <group readonly="1">
                        <group string="Especificaciones/varios">
                            <field name="crystal_num"/>
                            <field name="measures"/>
                            <field name="page_number"/>
                            <!-- <field name="polished_id"/>
                            <field name="arenado"/>
                            <field name="lavado"/>
                            <field name="entalle"/> -->
                            <field name="descuadre"/>
                            <field name="packed"/>
                            <field name="template"/>
                        </group>
                        <group string="Medidas/Cantidades">
                            <field name="base1"/>
                            <field name="base2"/>
                            <field name="height1"/>
                            <field name="height2"/>
                            <field name="quantity"/>
                            <field name="perimeter"/>
                            <field name="area"/>
                            <field name="sold_area"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


