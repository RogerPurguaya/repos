<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- il.traslate.insulados.wizard form view -->
        <record id="il_traslate_insulados_wizard_view_form" model="ir.ui.view">
            <field name="name">il.traslate.insulados.wizard.view.form</field>
            <field name="model">il.traslate.insulados.wizard</field>
            <field name="arch" type="xml">
                <form string="Traslado de Insulados">
                        <group>
                            <field name="picking_type_id" required="1"/>
                        </group>
                        <group>
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom" create="false">
                                    <field name="selected"/>
                                    <field name="order_id" readonly="1"/> 
                                    <field name="partner_id" readonly="1"/> 
                                    <field name="crystal_number" readonly="1"/> 
                                    <field name="product_id" readonly="1"/> 
                                    <field name="uom_id" readonly="1"/> 
                                    <field name="base1" readonly="1"/> 
                                    <field name="base2" readonly="1"/> 
                                    <field name="height1" readonly="1"/> 
                                    <field name="height2" readonly="1"/> 
                                    <field name="from_insulado" readonly="1"/> 
                                </tree>
                            </field>
                        </group>
                    <footer>
                        <button string="Procesar transferencia" name="process_transfer" type="object" class="btn-primary"/>
                        <button string="Cancelar" name="cancel" special="cancel" class="oe_link oe_inline"/>
                    </footer>
                </form>
            </field>
        </record>


        <!-- <record id="il_traslate_insulados_wizard_action" model="ir.actions.act_window">
            <field name="name">Traslado de Insulados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">il.traslate.insulados.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record> -->


        <!-- il.traslate.insulados.wizard action window -->
        <record id="il_traslate_insulados_wizard_action" model="ir.actions.server">
            <field name="name">Traslado de Insulados</field>
            <field name="model_id" ref="model_il_traslate_insulados_wizard"/>
            <field name="code">
                action = model.get_new_element()
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="il_traslate_insulados_wizard_menu_act" 
        name="Traslado de Insulados" 
        parent="glass_insulados_logistic.glass_logistic_insulados_menu" 
        action="il_traslate_insulados_wizard_action" 
        sequence="1" 
        groups="glass_insulados_logistic.group_logistic_managment_insulados"/>

    </data>
</odoo>