<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- il.finish.insulados.wizard form view -->
        <record id="il_finish_insulados_wizard_view_form" model="ir.ui.view">
            <field name="name">il.finish.insulados.wizard.view.form</field>
            <field name="model">il.finish.insulados.wizard</field>
            <field name="arch" type="xml">
                <form string="Ingreso de Cristales Insulados">
                    <header>
                        <button string="Ver Cristales Aptos" name="get_ins_crystals" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="glass_order_ids" widget="many2many_tags" required="1"/>
                        </group>
                        <notebook>
                            <page string="Detalle">
                                <field name="line_ids" readonly="1" nolabel="1">
                                    <tree>
                                       <field name="crystal_num"/>
                                       <field name="product_id"/>
                                       <field name="uom_id"/>
                                       <field name="quantity"/>
                                       <field name="base1"/>
                                       <field name="base2"/>
                                       <field name="height1"/>
                                       <field name="height2"/>
                                       <button string="Ver Cristales" name="view_crystals" type="object" class="btn-primary"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Cancelar" name="cancel" special="cancel" class="oe_link oe_inline"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- il.finish.insulados.wizard action window -->
        <record id="il_finish_insulados_wizard_action" model="ir.actions.act_window">
            <field name="name">Ingreso de Insulados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">il.finish.insulados.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem id="glass_logistic_insulados_menu" 
        parent="glass_production_order.glass_production_menu" 
        name="Insulados"
        sequence="5"
        groups="glass_insulados_logistic.group_logistic_managment_insulados"/>
  
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="il_finish_insulados_wizard_menu_act" 
        name="Ingreso de Insulados" 
        parent="glass_logistic_insulados_menu" 
        action="il_finish_insulados_wizard_action" 
        sequence="1" 
        groups="glass_insulados_logistic.group_logistic_managment_insulados"/>

    </data>
</odoo>