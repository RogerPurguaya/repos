<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- glass.order inherit form view -->
        <record id="view_glass_order_form" model="ir.ui.view">
            <field name="name">glass.order.inherit.view.form</field>
            <field name="model">glass.order</field>
            <field name="inherit_id" ref="glass_production_order.view_glass_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Requisiciones de Ficha" name="template_requisitions">
                        <group>
                            <field name="mtf_req_line_ids" invisible="1"/>
                            <field name="mtf_requirement_ids" readonly="1" nolabel="1">
                                <tree>
                                    <field name="name"/> 
                                    <field name="user_id"/> 
                                    <field name="state"/> 
                                </tree>
                            </field>
                        </group>
                    </page>    
                </xpath>
            </field>
        </record>
    </data>
</odoo> 