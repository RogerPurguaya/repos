<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <template id="assets_backend" inherit_id="web.assets_backend">
      <xpath expr="." position="inside">
        <link rel="stylesheet" href="/master_template_fullglass/static/src/css/sheet.css"/>
      </xpath>
    </template>

       <!-- mtf.template form view -->
       <record id="master_template_view_form" model="ir.ui.view">
           <field name="name">mtf.template.view.form</field>
           <field name="model">mtf.template</field>
           <field name="arch" type="xml">
               <form string="Ficha Maestra">
                <header>
                    <!-- <button string="Kardex" name="view_kardex" type="object" class="btn-primary"/> -->
                    <button string="Calcular" name="compute_template" type="object" class="btn-primary" icon="fa-bolt"/>
                    <button string="Reporte" name="build_report" type="object" class="btn-primary" icon="fa-print"/>
                    <button string="Excel" name="view_excel" type="object" class="btn-primary" icon="fa-table"/>
                </header>
                   <sheet>
                    <div class="oe_button_box margin_bott" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" required="1"/>
                            <field name="applied_on" required="1"/>
                            <field name="code" readonly="1"/>
                            <field name="uom_id" readonly="1"/>
                            <field name="measure" style="width:50%%"/>
                        </group>
                        <group>
                            <field name="weight" readonly="1" style="width:50%%"/>
                            <field name="quantity" style="width:50%%"/>
                            <field name="stock" style="width:50%%"/>
                            <field name="int_code" style="width:50%%"/>
                        </group>

                         <!-- <div class="row table_container container"> -->
                        <div class="o_group o_inner_group o_group_col_10 table_container">
                        <div>
                            <div class="col-lg-2"></div>
                            <div class="col-lg-2">Base</div>
                            <div class="col-lg-2">Altura</div>
                            <div class="col-lg-2">Móvil</div>
                            <div class="col-lg-2">SobreLuz</div>
                            <div class="col-lg-2">Alfeizar</div>
                        </div>

                        <div>
                            <div class="col-lg-2">Mínimos</div>
                            <div class="col-lg-2"><field name="min_base" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="min_height" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="min_movil" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="min_sobre" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="min_alfe" class="cont_right"/></div>
                        </div>
                         <div>
                            <div class="col-lg-2">Standard</div>
                            <div class="col-lg-2"><field name="std_base" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="std_height" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="std_movil" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="std_sobre" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="std_alfe" class="cont_right"/></div>
                        </div>
                         <div>
                            <div class="col-lg-2">Máximos</div>
                            <div class="col-lg-2"><field name="max_base" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="max_height" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="max_movil" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="max_sobre" class="cont_right"/></div>
                            <div class="col-lg-2"><field name="max_alfe" class="cont_right"/></div>
                        </div>
                    </div>
                    </group>

                    <notebook>
                        <page string="Ficha" name="template_page">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id" required="1"/>
                                    <field name="default_code" string="Código" readonly="1"/>
                                    <field name="model"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="unit_price" required="1"/>
                                    <field name="un_price_special" required="1"/>
                                    <field name="pos_ins_crystal"/>
                                    <field name="to_produce"/>
                                    <field name="is_spacer"/>
                                    <field name="not_costed"/>
                                    <field name="uom_quantity" required="1"/>
                                    <field name="fixed"/>
                                    <field name="base" string="Base(mm)"/>
                                    <field name="inc_b"/>
                                    <field name="height" string="Altura(mm)"/>
                                    <field name="inc_h"/>
                                    <field name="depending_on"/>
                                    <field name="location"/>
                                    <field name="position"/>
                                    <field name="cut_type"/>
                                    <field name="waste_percent"/>
                                    <field name="total_units" readonly="1"/>
                                    <field name="amount_untaxed" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Procesos">
                            <group attrs="{'invisible':[('applied_on','!=','cr_ins')]}">
                                <field name="ins_cr_1_stage_ids" widget="many2many_tags" string="Proc. Ins. Cristal 1"/>
                                <field name="ins_cr_2_stage_ids" widget="many2many_tags" string="Proc. Ins. Cristal 2"/>
                            </group>
                            <field name="stage_ids" attrs="{'invisible':[('applied_on','=','cr_ins')]}">
                                <tree>
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                           <!--  <group>
                                <button string="Actualizar" name="update_process_lines" type="object" class="btn-primary oe_edit_only"/>
                            </group>
                            <field name="line_process_ids" nolabel="1">
                                <tree editable="bottom" create="false">
                                    <field name="product_id" readonly="1"/>
                                    <field name="optimizado" string="Optim."/>
                                    <field name="corte" string="Corte"/>
                                    <field name="pulido" string="Pulido"/>
                                    <field name="lavado" string="Lava."/>
                                    <field name="ingresado" string="Ingre."/>
                                    <field name="entregado" string="Entreg."/>
                                    <field name="templado" string="Templ."/>
                                    <field name="insulado" string="Insu."/>
                                    <field name="troquelado" string="Troque."/>
                                    <field name="habilitado" string="Habilit."/>
                                    <field name="ensamble" string="Ensam."/>
                                    <field name="pegado" string="Peg."/>
                                </tree>
                            </field> -->
                        </page>
                        <page string="Modelos/Precios">
                            <!-- <group>
                                <field name="qty_unit_costed"/>
                                <field name="currency_id"/>
                                <field name="net_price_avg"/>
                                <field name="flete_amount"/>
                                <field name="uom_price"/>
                                <field name="min_qty_sale"/>
                            </group> -->
                        </page>
                    </notebook>
                    <group col="3" string="Totales">
                        <group>
                            <field name="area_total" string="Área Total (M2)" readonly="1"/>
                            <field name="cost_mp" readonly="1"/>
                            <field name="cost_insumos" readonly="1"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                            <group>
                            <field name="manpower" readonly="1"/>
                            <field name="services" readonly="1"/>
                            <field name="depreciacion" readonly="1"/>
                            <field name="cost_safe" readonly="1"/> 
                            <field name="tributes" readonly="1"/>
                            <field name="total_indirect_costs" readonly="1"/> 
                        </group>
                        <group>
                            <field name="total_cost_manufacturing" readonly="1"/>
                            <field name="cost_adm_sales" readonly="1"/>
                            <field name="total_cost" readonly="1"/>
                            <field name="util_percent" readonly="1"/>
                            <field name="sale_price" readonly="1"/>
                        </group>
                    </group>
                    <group col="3" string="Resumen">
                        <group>
                            <field name="ref_product_id" readonly="1"/>
                            <field name="ref_uom_id" readonly="1"/>
                            <field name="currency_id" required="1"/>
                        </group>
                        <group>
                            <field name="ref_total_cost" readonly="1"/>
                            <field name="ref_util_percent" readonly="1"/>
                            <field name="ref_sale_price" readonly="1"/>
                            <field name="margin_obj"/>
                        </group>
                        <group>
                            <field name="discount_a" readonly="1"/>
                            <field name="discount_b" readonly="1"/>
                            <field name="discount_c" readonly="1"/>
                            <field name="discount_d" readonly="1"/>
                        </group>
                    </group>
                   </sheet>
               </form>
           </field>
       </record>


    <!-- mtf.template tree view -->
    <record id="master_template_view_tree" model="ir.ui.view">
        <field name="name">mtf.template.view.tree</field>
        <field name="model">mtf.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/> 
                <field name="code"/> 
                <field name="sale_price"/> 
            </tree>
        </field>
    </record>


        <record id="master_template_list_action" model="ir.actions.act_window">
            <field name="name">Fichas maestras</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mtf.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Fichas maestras" id="master_template_main_menu"
        parent="sales_team.menu_sale_config"
        sequence="4" 
        groups="master_template_fullglass.group_master_tmpl_manager" />

        <menuitem name="Fichas maestras" id="master_template_list_menu"
        parent="master_template_main_menu"
        action="master_template_list_action" sequence="1" 
        groups="master_template_fullglass.group_master_tmpl_manager" />

        <!-- <menuitem name="Crear Plantilla" id="master_template_create_menu"
        parent="master_template_main_menu"
        action="master_template_list_action" sequence="2" 
        groups="master_template_fullglass.group_master_tmpl_manager" /> -->

    </data>
</odoo>