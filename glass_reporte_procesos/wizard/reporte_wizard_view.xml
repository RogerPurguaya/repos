<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="reporte_wizard_form"> 
			<field name="name">reporte.wizard.form</field>
			<field name="model">reporte.wizard</field>
			<field name="arch" type="xml">
				<form string="Generar Reporte" version="8.0">
					<group>	

						<group col='2'>
							<group col='2' colspan='1'>	
								<field name="start_date"  />
							</group>
							<group col='2' colspan='1'>
								<field name="end_date" />
							</group>
							<group col='2' colspan='1'>
								<field name="show_all" string="Mostrar Todos"/>
							</group>	
							<group col='2' colspan='1' attrs="{'invisible':[('show_all','=',True)]}">
								<field name="stage_id" attrs="{'required':[('show_all','=',False)]}"/>
							</group>								
						</group>

						<footer>
							<button string="Generar Excel" name="do_rebuild" type="object" class="oe_highlight"/>
							
							<button string="Cancelar" class="oe_link" special="cancel"/>
						</footer>
				</group>	
				</form>
			</field>
		</record>


		<record id="reporte_wizard_action" model="ir.actions.act_window">
			<field name="name">Generar Reporte</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">reporte.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="target">new</field>
		</record>

		<menuitem id="glass_report_de_control_menu" parent="glass_production_order.glass_report_menu" action="reporte_wizard_action" name="Reporte de Procesos" sequence="1" groups="glass_production_order.group_glass_user"/>

       <menuitem id="glass_report_de_control_menu2" parent="sales_team.menu_sale_report" action="reporte_wizard_action" name="Reporte por Procesos" sequence="6" groups="glass_production_order.group_glass_user,glass_production_order.group_glass_seguimiento,glass_production_order.group_glass_production_user"/>


	</data>
</openerp>
