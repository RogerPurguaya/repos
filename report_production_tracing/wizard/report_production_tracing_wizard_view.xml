<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="report_production_tracing_wizard_form"> 
			<field name="name">report.production.tracing.wizard.form</field>
			<field name="model">report.production.tracing.wizard</field>
			<field name="arch" type="xml">
				<form string="Reporte Seguimiento Global de la Produccion" version="8.0">
						<group string="Fechas:">
							<group>
								<field name="start_date" attrs="{'required':[('show_for_dates','=',True)]}"/>
							</group>
							<group>
								<field name="end_date" attrs="{'required':[('show_for_dates','=',True)]}"/>
							</group>
						</group>
						<group string="Filtros">
								<field name="search_param" attrs="{'invisible':[('show_for_dates','=',True)],'required':[('show_for_dates','=',False)]}"/>
								<field name="glass_order_id" attrs="{'invisible': ['|',('search_param','!=','glass_order'),('show_for_dates','=',True)],'required':[('search_param','=','glass_order'),('show_for_dates','=',False)]}"/>
								<field name="product_id" attrs="{'invisible': ['|',('search_param','!=','product'),('show_for_dates','=',True)],'required':[('search_param','=','product'),('show_for_dates','=',False)]}"/>
								<field name="filters" required="1"/>
								<field name="customer_id" domain="[('customer','=',True)]" attrs="{'invisible':['|',('search_param','=','glass_order'),('show_for_dates','=',True)]}"/>
								<field name="show_breaks" string="Incluir Rotos"/>
								<field name="show_for_dates" string="Mostrar por rango de fechas"/>
						</group>
						<footer>
							<button string="Exportar" name="do_rebuild" type="object" class="oe_highlight"/>
							O
							<button string="Cancelar" class="oe_link" special="cancel"/>
						</footer>
				</form>
			</field>
		</record>


		<record id="report_production_tracing_action" model="ir.actions.act_window">
			<field name="name">Reporte seguimiento de la produccion</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">report.production.tracing.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

	
		<menuitem name="Reporte Seguimiento de Producccion" id="report_production_tracing_menu" 
				parent="glass_production_order.glass_report_menu"
		 		action="report_production_tracing_action" 
		 		sequence="3" />

		<menuitem id="report_of_requisitions_orders_menu2" parent="sales_team.menu_sale_report" action="report_production_tracing_action" name="Reporte Seguimiento de ProduccciÃ³n" sequence="7" groups="glass_production_order.group_glass_user,glass_production_order.group_glass_seguimiento,glass_production_order.group_glass_production_user"/>
	
	</data>
</openerp>
