<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="view_kardex_invoice_notin_tree">
			<field name="name">kardex.invoice.notin.tree</field>
			<field name="model">kardex.invoice.notin</field>
			<field name="arch" type="xml">
				<tree string="kardex_saldos">
					<field name="almacen" string= "Almacén"/>
					<field name="default_code" string="Código del producto"/>
					<field name="producto" string="Producto"/>
					<field name="category_id" string="Categoria"/>
					<field name="unidad" string="Unidad de medida"/>
					<field name="ingreso" string="Entradas"/>
					<field name="salida" string="Salidas"/>
					<field name="saldof" string="Saldo"/>
				</tree>
			</field>
		</record>
		
		<record id="view_kardex_invoice_notin_filter" model="ir.ui.view">
            <field name="name">kardex.invoice.notin.search</field>
            <field name="model">kardex.invoice.notin</field>
            <field name="arch" type="xml">
                <search string="Search Kardex">
                    <field name="almacen"/>
                    <field name="producto"/>
                    <group expand="0" string="Group By...">
                        <filter string="Almacen" icon="terp-partner" domain="[]" context="{'group_by':'almacen'}"/>
                        <filter string="Producto" icon="terp-folder-orange" domain="[]" context="{'group_by':'producto'}"/>
                    </group>
                </search>
            </field>
        </record>



		<record id="kardex_invoice_notin_action" model="ir.actions.act_window">
			<field name="name">Saldos</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kardex.invoice.notin</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="search_view_id" ref="view_kardex_invoice_notin_filter" />
            <field name="multi">True</field>
		</record>

	</data>
</openerp>
