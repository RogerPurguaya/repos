        <record id="view_main_parameter_form" model="ir.ui.view">
            <field name="name">main.parameter.form</field>
            <field name="model">main.parameter</field>
            <field name="inherit_id" ref="account_parameter_it.view_main_parameter_form"/>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                        <page string="Costos">
                            <group >
                                <group string="Diarios">
                                	<field name="diario_asiento_costo" />                                	
                                </group>
                                <group></group>

                                <group string="Productos en Proceso">
	                                <field name="pproduct_costos_extraccion" />
	                                <field name="pproduct_costos_trituracion" />
	                                <field name="pproduct_costos_intermedia" />
	                                <field name="pproduct_costos_calcinacion" />
	                                <field name="pproduct_costos_micronizado" />
                                    <field name="pproduct_costos_pet" />                                	
                                </group>
                                <group></group>

                                <group string="Cuentas">                                	
	                                <field name="product_costos_extraccion" />
	                                <field name="product_costos_trituracion" />
	                                <field name="product_costos_intermedia" />
	                                <field name="product_costos_calcinacion" />
	                                <field name="product_costos_micronizado" />
                                    <field name="product_costos_pet" />
	                                <group></group>
	                                <group></group>                               
	                                <field name="aa_variacion_almacenada_extraccion" />
	                                <field name="aa_variacion_almacenada_trituracion" />
	                                <field name="aa_variacion_almacenada_intermedia" /> 
	                                <field name="aa_variacion_almacenada_calcinacion" />
	                                <field name="aa_variacion_almacenada_micronizado" />
                                    <field name="aa_variacion_almacenada_pet" />
                                </group>
                                <group></group>


                                <group string="Almacenes">
	                                <field name="location_virtual_produccion" />                            
	                                <field name="location_existencias_extraccion" />
	                                <field name="location_existencias_trituracion" />
	                                <field name="location_existencias_intermedia" />    
	                                <field name="location_existencias_calcinacion" />
	                                <field name="location_existencias_micronizado" />
                                    <field name="location_existencias_pet" />                                	
                                </group>
                                <group></group>
                            </group>
                        </page>
                </xpath>
            </field>
        </record>

