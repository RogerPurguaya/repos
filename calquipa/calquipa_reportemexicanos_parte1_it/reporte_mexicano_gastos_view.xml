            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grupo.report.gastos</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Gastos" id="menu_conf_reporte_mexicano_rep_gastos_contenedor" parent="menu_conf_reporte_mexicano"/>
