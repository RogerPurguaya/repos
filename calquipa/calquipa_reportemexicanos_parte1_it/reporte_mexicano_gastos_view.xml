        <record id="rm_report_gastos_search" model = "ir.ui.view">
            <field name="name">rm.report.gastos.search</field>
            <field name="model">rm.report.gastos</field>
            <field name="arch" type="xml">
                <search string="buscar">
                    <field name="fiscal"/>

                    <filter icon="terp-go-year" string="Año Fiscal" name="fiscal"/>

                    <separator/>

                    <group expand="1" string="Group By...">
                        <filter string="Año Fiscal" name="fiscal" icon="terp-partner" context="{'group_by':'fiscal'}"/>

                    </group>

                </search>
            </field>
        </record>

        <record id="action_crm_tipo_rep_gastos" model="ir.actions.act_window">
