            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tipo.report.gastos</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Tipo Reporte Gastos" action="action_crm_tipo_rep_gastos" id="menu_conf_tipo_reporte_mexicano_rep_gastos" parent="menu_conf_reporte_mexicano_rep_gastos_contenedor"/>


    </data>
</openerp>